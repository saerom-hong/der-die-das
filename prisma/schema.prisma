generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum LanguageLevel {
  A1
  A2
  B1
  B2
}

enum Article {
  Der
  Die
  Das
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Vocabulary {
  id   Int     @id @default(autoincrement())
  word String
  article Article
  translation String
  level LanguageLevel
  createdAt DateTime @default(now())
}
